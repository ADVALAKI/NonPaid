                <t t-snippet="website_feature_boxes.s_bullet_line" t-thumbnail="/website_feature_boxes/static/src/img/ui/snippet_thumb_bullet_line.jpg"/>                
                <t t-snippet="website_feature_boxes.s_feature_right" t-thumbnail="/website_feature_boxes/static/src/img/ui/snippet_thumb_feature_right.jpg"/>                
            </xpath>
        </template>      

