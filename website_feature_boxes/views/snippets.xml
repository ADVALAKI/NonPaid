    <template id="twitter" inherit_id="website.assets_frontend" name="Twitter Snippet">
        <xpath expr="/t" position="inside">
            <link rel="stylesheet" href="/website_feature_boxes/static/src/css/website_feature_boxes.css"/>
        </xpath>
    </template>
    
        <template id="html_feature_boxes_editor" inherit_id="website.assets_editor" name="Website Feature Boxes Resources">
            <xpath expr="/t" position="inside">
                <script type="text/javascript" src="/website_feature_boxes/static/src/js/website.feature.boxes.js" />
            </xpath>
        </template>

        <template id="website_feature_boxes_options" name="Form Builder Options" inherit_id="website.snippet_options">
            <xpath expr="//div" position="after">
                <div data-js='feature_boxes'
