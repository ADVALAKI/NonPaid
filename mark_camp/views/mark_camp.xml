<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="mark_camp_view_form" model="ir.ui.view">
          <field name="name">mark.camp.view.form</field>
          <field name="model">mark.camp</field>
          <field name="arch" type="xml">
      	      <form>
      	          <sheet>
      	          <group>
      	              <field name="name"/>
      	              <field name="state"/>
      	              <field name="model"/>
                          <field name="filter_ids" context="{'mc_id': active_id, 'default_model':model}}">
		              <tree editable="true">
      	                          <field name="model" invisible="1"/>		              
		                  <field name="filter_id" domain="[('model_id','=', model)]"/>
		                  <field name="filter_count"/>
		              </tree>
		          </field>
      	              <field name="activity_ids" context="{'mc_id': active_id, 'default_model':model}">
      	                  <tree editable="true">
      	                      <field name="model" invisible="1"/>
      	                      <field name="name"/>
      	                      <field name="start"/>
      	                      <field name="type"/>
      	                      <field name="email_template_id" domain="[('model_id','=',model)]" />
      	                      <field name="delay_unit"/>
      	                      <field name="delay"/>
      	                  </tree>
      	              </field>
      	          </group>
      	      </sheet>
      	      </form>
      	  </field>
      </record>

      <record id="mark_camp_view_tree" model="ir.ui.view">
          <field name="name">mark.camp.view.tree</field>
          <field name="model">mark.camp</field>
          <field name="arch" type="xml">     
      	      <tree>
      	          <field name="name"/>
      	          <field name="model"/>
      	      </tree>
      	  </field>
      </record>

      <record id="mark_camp_action" model="ir.actions.act_window">
          <field name="name">mark.camp.action</field>
      	  <field name="res_model">mark.camp</field>
      	  <field name="view_type">form</field>
      	  <field name="view_mode">tree,form</field>
      	  <field name="help" type="html">
	      <p class="oe_view_nocontent_create">Add a marketing campaign</p>
	  </field>
      </record>      

      <menuitem id="mark_campaign_menu" name="Simple Campaigns" parent="marketing_campaign.menu_marketing_campaign_campaigns" action="mark_camp_action" sequence="10"/>

    </data>
</openerp>