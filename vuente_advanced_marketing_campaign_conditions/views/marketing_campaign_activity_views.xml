<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_marketing_campaign_actffivity_form_inherit_vamcc" model="ir.ui.view">
            <field name="name">vamcc.marketing.campaign.activity</field>
            <field name="model">marketing.campaign.activity</field>
            <field name="inherit_id" ref="marketing_campaign.view_marketing_campaign_activity_form"/>
            <field name="arch" type="xml">
      	        <xpath expr="//field[@name='from_ids']/tree" position="inside">
                    <field name="campaign_id" invisible="True"/>
                </xpath>
      	        <xpath expr="//field[@name='from_ids']" position="attributes">
      	            <attribute name="context">{'default_activity_to_id': active_id, 'default_campaign_id': campaign_id}</attribute>
      	        </xpath>
      	        <xpath expr="//field[@name='to_ids']/tree" position="inside">
                    <field name="campaign_id" invisible="True"/>
                </xpath>
      	        <xpath expr="//field[@name='to_ids']" position="attributes">
      	            <attribute name="context">{'default_activity_from_id': active_id, 'default_campaign_id': campaign_id}</attribute>
      	        </xpath>
      	    </field>
        </record>
                
    </data>
</openerp>