<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_mail_template_drag" model="ir.ui.view">
            <field name="name">mail.template.task.tunnel</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_form"/>
            <field name="arch" type="xml">
      	        <field name="body_html" position="replace">
      	            <field name="body_html"  widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
      	        </field>
      	        <field name="model_id" position="after">
      	            <field name="advanced_settings"/>
      	        </field>
      	        <xpath expr="//page[2]" position="attributes">
      	            <attribute name="attrs">{'invisible': [('advanced_settings', '=', False)]}</attribute>
      	        </xpath>
      	        <xpath expr="//page[3]" position="attributes">
      	            <attribute name="attrs">{'invisible': [('advanced_settings', '=', False)]}</attribute>
      	        </xpath>
      	        <xpath expr="//page[4]" position="attributes">
      	            <attribute name="attrs">{'invisible': [('advanced_settings', '=', False)]}</attribute>
      	        </xpath>

      	    </field>
        </record>
        
    </data>
</openerp>