<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_marketing_campaign_activity_form_tracking" model="ir.ui.view">
            <field name="name">tracking.marketing.campaign.activity</field>
            <field name="model">marketing.campaign</field>
            <field name="inherit_id" ref="marketing_campaign.view_marketing_campaign_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="115" type="action" icon="fa-envelope-o" class="oe_stat_button">
                        <field name="email_tracking_sent" string="Sent" widget="statinfo"/>
                    </button>
                    <button name="116" type="action" icon="fa-envelope-o" class="oe_stat_button">
                        <field name="email_tracking_opened" string="Opened" widget="statinfo"/>
                    </button>
                </div>

      	    </field>
        </record>
        
        
    </data>
</openerp>